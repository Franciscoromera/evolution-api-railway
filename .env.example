# ====================
# ESSENTIAL CONFIGURATION
# ====================

# API Key for authentication (CHANGE THIS!)
AUTHENTICATION_API_KEY=change-me-to-secure-key

# Server URL (use your Railway deployment URL)
SERVER_URL=https://your-app.up.railway.app

# ====================
# DATABASE CONFIGURATION
# ====================

# Enable database
DATABASE_ENABLED=true
DATABASE_PROVIDER=postgresql

# PostgreSQL connection (Railway will provide this)
# Format: postgresql://user:password@host:port/database
DATABASE_CONNECTION_URI=postgresql://user:password@host:5432/evolution

# Database options
DATABASE_SAVE_DATA_INSTANCE=true
DATABASE_SAVE_DATA_NEW_MESSAGE=true
DATABASE_SAVE_MESSAGE_UPDATE=true
DATABASE_SAVE_DATA_CONTACTS=true
DATABASE_SAVE_DATA_CHATS=true
DATABASE_CONNECTION_CLIENT_NAME=evolution_v2

# ====================
# REDIS CONFIGURATION
# ====================

# Enable Redis cache
CACHE_REDIS_ENABLED=true

# Redis connection (Railway will provide this)
CACHE_REDIS_URI=redis://default:password@host:6379
CACHE_REDIS_PREFIX_KEY=evolution_v2
CACHE_REDIS_SAVE_INSTANCES=false

# Local cache (disable if using Redis)
CACHE_LOCAL_ENABLED=false

# ====================
# OPTIONAL: RabbitMQ
# ====================

RABBITMQ_ENABLED=false
RABBITMQ_URI=amqp://admin:admin@rabbitmq:5672/default

# ====================
# OPTIONAL: S3 Storage
# ====================

S3_ENABLED=false
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=evolution
S3_PORT=443
S3_ENDPOINT=
S3_USE_SSL=true

# ====================
# INSTANCE MANAGEMENT
# ====================

# Delete instance on disconnect
DEL_INSTANCE=false
